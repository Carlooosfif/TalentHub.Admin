@model TalentHub.Admin.Models.Area

@{
    ViewData["Title"] = "Editar área";
}

<div class="page-header">
    <div class="page-header__info">
        <h1 class="page-header__title">Editar área</h1>
        <p class="page-header__subtitle">
            Actualiza la información del área seleccionada.
        </p>
    </div>
</div>

<div class="card">
    <form asp-action="Edit" method="post" class="form">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" asp-for="Id" />

        <div class="form__group">
            <label asp-for="Nombre"></label>
            <input asp-for="Nombre" class="form__input" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="form__actions">
            <button type="submit" class="btn btn--primary">Guardar cambios</button>
            <a asp-action="Index" class="btn btn--ghost">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
